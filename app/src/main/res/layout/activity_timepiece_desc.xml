<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_timepiece_desc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FF5001"
        android:gravity="center_vertical"
        android:padding="10dp"
        >
        <ImageView
            android:id="@+id/leftView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/e"
            android:scaleType="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品详情"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginLeft="55dp"

            />
        <ImageView
            android:id="@+id/rightViewxin"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/f"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            />

        <ImageView
            android:id="@+id/rightViewshare"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/g"
            android:scaleType="center"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="vertical"
                android:background="#fff"
                >
                <cn.bluemobi.dylan.photoview.library.PhotoView
                    android:id="@+id/photo"
                    android:layout_width="match_parent"
                    android:layout_height="254dp"
                    android:scaleType="fitXY"
                    />
                <TextView
                    android:id="@+id/desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="动感风格风格v发v发的"
                    android:textColor="#000"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="动感风格风格v发v发的"
                    android:paddingTop="5dp"
                    android:paddingLeft="10dp"
                    android:textSize="15dp"
                    />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:textColor="#FFE7452C"
                    android:paddingLeft="15dp"
                    android:textSize="15dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="送至"
                        />
                    <RelativeLayout
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="#FFE7452C"
                        android:gravity="center"
                        android:layout_marginLeft="12dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="全国"
                            android:textColor="#fff"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="有货  免运费"
                        android:layout_marginLeft="12dp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/shopdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品介绍"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#fff"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/a"
                    android:padding="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="店铺推荐"
                    android:textSize="20dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >
                <ListView
                    android:id="@+id/lv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="客服"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/i"
            />
        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="购物车"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@drawable/aa"
            />
        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="加入购物车"
            android:layout_weight="2"
            android:gravity="center"
            android:drawableTop="@drawable/f"
            android:background="#FF5001"
            />
        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:button="@null"
            android:text="立即购买"
            android:layout_weight="2"
            android:gravity="center"
            android:drawableTop="@drawable/h"
            android:background="#FFE1070E"
            />
    </RadioGroup>
</LinearLayout>
