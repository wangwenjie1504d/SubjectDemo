<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_timepiece"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FF5001">
        <ImageView
            android:id="@+id/leftView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/e"
            android:scaleType="center"
            />

        <EditText
            android:id="@+id/titleEditText"
            android:layout_height="34dp"
            android:layout_width="match_parent"
            android:hint="搜索一下"
            android:textSize="14sp"
            android:gravity="center"
            android:focusable="false"
            android:layout_weight="1"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#fff"
            android:layout_marginBottom="8dp"
            android:textColorHint="#CCCCCC"
            android:background="@drawable/bg_edit_text_search"
            />


        <ImageView
            android:id="@+id/rightView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_edit_search"
            android:scaleType="center"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#fff"
        >
        <TextView
            android:id="@+id/ordertext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="综合排序"
            android:textColor="#000"
            android:textSize="20dp"
            android:layout_weight="2"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="销量优先"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/ordertext"
            />
        <TextView
            android:id="@+id/orderte"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="筛选"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/count"
            />
        <CheckBox
            android:id="@+id/check"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/timeprice_select"
            android:checked="true"
            android:button="@null"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerViewtime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        ></android.support.v7.widget.RecyclerView>
</LinearLayout>
